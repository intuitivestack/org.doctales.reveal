    <moduleMetadata>
      <moduleType>attributedomain</moduleType>
      <moduleShortName>revealDataAtt-d</moduleShortName>
      <modulePublicIds>
        <dtdEnt>-//DOCTALES//ENTITIES DITA<var presep=" " name="ditaver"/> Reveal Data Domain//EN</dtdEnt>
        <xsdMod>urn:doctales:dita:xsd:revealDataAttDomain.xsd<var presep=":" name="ditaver"/></xsdMod>
        <rncMod>urn:doctales:dita:rnc:revealDataAttDomain.rnc<var presep=":" name="ditaver"/></rncMod>
